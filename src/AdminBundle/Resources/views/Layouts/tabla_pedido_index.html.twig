{% for lpedidos in lista_pedidos %}	
	<tr>
		<td>{{ (lpedidos.codigo_pedido != "")? lpedidos.codigo_pedido : "Sin Definir" }}</td>
		<td>{{ lpedidos.codigo_cotizacion }}</td>
		<td>{{ lpedidos.fechaIngreso|date("d/m/Y") }}</td>
		<td>{{ lpedidos.empresa_nombre }}</td> 
		<td>{{ lpedidos.personal_nombre }}</td>   
		<td>{{ lpedidos.estado }}</td>
		<td>
			<ul class=" list-unstyled list-inline text-right">
				<li><a class="btn_dele_cont cur_poin text-danger" data-id="{{ lpedidos.id }}" data-toggle="tooltip" data-placement="top" title="Eliminar"><i class="red-text small material-icons ">cancel</i></a></li>
				<li><a class="btn_test cur_poin" href="{{ url('admin_pedido_editar',{id:lpedidos.id}) }}" data-toggle="tooltip" data-placement="bottom" title="Editar"><i class="small material-icons ">mode_edit</i></a></li>
			</ul>		
		</td>
	</tr>
{% endfor %}
